<div id="bgImg"></div>
<div class="container" id="bgContainer">
  <section class= "text-center text-danger">

    <% if user_signed_in? %>
      <h1>Welcome <%= @user.first_name %></h1>
    <% else %>
      <h1>Welcome to PopCorn</h1>
      <h2>Create a list and save any kind of movies</h2>
    <% end %>
    <% if @lists.blank? %>
       <div >
        <%= link_to "Create your first list", new_list_path, class: "btn btn-danger btn-lg", id: "btnMain" %>
      </div>
    <% else %>
      <div>
        <%= link_to "Create a new list", new_list_path, class: "btn btn-danger btn-lg", id: "btnMain" %>
      </div>
    <% end %>
  </section>
</div>
<div class="container">
  <section>
    <article>
      <% if @lists.blank? %>
        <h3 class="text-center my-4">There are no lists created yet</h3>
      <% else %>
        <div class="my-4">
          <h2>Available lists: (<%= @lists.count %>)</h2>
          <div class="row">
            <% @lists.each do |list| %>
              <div class="col-md-4 mb-4">
                <!-- Card component -->
                <%= link_to list_path(list), class: 'card my-4', id: "cardsIndex", style: "background: url(#{list.image.attached? ? rails_blob_path(list.image, only_path: true) : asset_path('bg.jpg')}); background-size: cover; background-position: center; color:#fff;" do %>
                  <!-- Card Content -->
                  <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 150px;">
                    <h5 class="card-title text-center"><%= list.name.upcase %></h5>
                  </div>
                  <!-- Card Footer -->
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </article>
  </section>
</div>
