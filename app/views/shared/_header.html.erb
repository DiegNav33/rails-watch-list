<header>
  <nav class="navbar navbar-expand-lg container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", alt: "alttext", class: "logo", style: "width:50px" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item d-flex flex-column flex-sm-row text-center">
          <%= link_to "Home", root_path, class: "btn btn-outline-danger" %>
          <%= link_to "New list", new_list_path, class: "btn btn-danger ms-sm-2" %>

          <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-danger ms-sm-2" %>
          <% else %>
            <%= link_to "Log in", new_user_session_path, class: "btn btn-danger ms-sm-2" %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
