<footer class="footer text-center py-3 mt-auto shadow-sm">
  <div class="container">
    <ul class="nav justify-content-center">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "#{'active' if current_page?(root_path)}" %>
      </li>
      <li class="nav-item">
        <%= link_to "New list", new_list_path, class: "#{'active' if current_page?(new_list_path)}" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Profile", profiles_path, class: "#{'active' if current_page?(profiles_path)}" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log in / Sign-up", new_user_session_path, class: "#{'active' if current_page?(new_user_session_path)}" %>
        </li>
      <% end %>
    </ul>
    <p class="mt-3 mb-0"><small>&copy; <%= Time.current.year %> PopCorn. All rights reserved.</small></p>
  </div>
</footer>
